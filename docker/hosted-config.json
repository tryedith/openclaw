{
  "gateway": {
    "mode": "local",
    "controlUi": {
      "dangerouslyDisableDeviceAuth": true
    },
    "http": {
      "endpoints": {
        "chatCompletions": {
          "enabled": true
        }
      }
    }
  },
  "browser": {
    "enabled": true,
    "headless": true,
    "noSandbox": true,
    "executablePath": "/usr/bin/chromium",
    "defaultProfile": "openclaw"
  },
  "tools": {
    "alsoAllow": ["browser"]
  },
  "hooks": {
    "internal": {
      "enabled": true
    }
  }
}
